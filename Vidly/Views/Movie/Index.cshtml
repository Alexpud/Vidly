
@model Vidly.ViewModels.MovieModel
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@if (Model.Movies.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movie", new { movieId = movie.Id}, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No movies yet!</h2>
}