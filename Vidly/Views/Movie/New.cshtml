@model Vidly.ViewModels.MovieModel
@{
    ViewBag.Title = "Create";
}

<h2>New Movie</h2>

@using (Html.BeginForm("New", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre, new SelectList(ViewBag.Genres ), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.QtdStock)
        @Html.TextBoxFor(m => m.Movie.QtdStock, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">
        Create
    </button>
}
